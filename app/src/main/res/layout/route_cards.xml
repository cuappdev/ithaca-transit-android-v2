<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewdelegate"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rlayout"
        android:background="@drawable/route_card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/moreInfo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:contentDescription="More Details"
            android:src="@drawable/ic_right_caret"/>

        <TextView
            android:id="@+id/delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:layout_toEndOf="@+id/route_description"
            android:paddingEnd="48dp"
            android:text="Delay"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/route_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:layout_marginStart="8dp"
            android:paddingEnd="36dp"
            android:text="Route Description"
            android:textColor="@color/routeDetails"
            android:textSize="14sp"
            android:textStyle="normal" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/icons"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_below="@id/route_description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/white"
            android:dividerHeight="0dp"
            android:orientation="vertical"
            android:paddingStart="2dp">

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/path_dots"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_description"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/white"
            android:orientation="vertical">

            <com.example.ithaca_transit_android_v2.views.DrawRouteCard

                android:id="@+id/drawingDots"
                android:layout_width="18dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

            </com.example.ithaca_transit_android_v2.views.DrawRouteCard>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_description"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/path_dots"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/white"
            android:dividerHeight="-15dp"
            android:orientation="vertical"
            android:paddingStart="2dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>